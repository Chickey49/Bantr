<nav class="navbar">
  <span class="navbar-brand mb-0 h1" id="nav-heading">Chat Exchanges</span>
</nav>
<!--Container -->
<div class="container" style="margin:100px;align-items: center;">
  <div class="row">
    <!--Column 1-->
    <div class="col-md-6">
      <div class="container">
        <h1>Following</h1>
        <ul class="list-group">
          {{#each buds}}
          <div class="alert alert-info" id="chats1">
            <a href="/users/{{username}}"><img src="{{avatar}}">
              <strong>@{{username}}</strong></a>
          </div>
          {{/each}}
        </ul>
      </div>
    </div>

    <!-- Column 2 -->
    <div class="col-md-6">
      <div class="container">
        <h1>Posts</h1>
        <ul class="list-group">
          {{#each buzz}}
          <div class="alert alert-info" id="chats2">
            <a href="/users/{{username}}"><img src="{{avatar}}">
              <strong>@{{username}}</strong></a><br>
            {{body}}
          </div>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>