<div class="container contUser ">
    <div class="row">
        <div class="col-md-5">
            <div class="card" id="follower" style="width: 18rem;">
                <div class="card-body">
                    <a href="/users/{{user.username}}"><img src="{{user.avatar}}" class="img-thumbnail float-right"
                            alt="user avatar for {{user.username}}">
                    </a>
                    <h5 class="card-title">@{{user.username}}</h5>
                    {{#if user.self}}
                    <a class="btn btnFix btn-secondary p-1" href="/dashboard">back to dash</a>
                    {{else}}
                    <button class="btn btnFix btn-secondary p-1" id="follow-buds" data-id="{{user.id}}"><b>+</b>
                        bud</button>
                    {{/if}}
                </div>
            </div>
            <br>

            <ul class="list-group following">
                <h4 class="myBudsh4">my buds</h4>
                {{#each buds}}
                {{> bud-block}}
                {{/each}}

            </ul>
        </div>
        <div class="col-md-7 ">
            <h1 class="postsBoards">Posts</h1>
            <ul class="list-group postsStyle">
                {{#each buzz}}
                {{> buzz-block}}
                {{/each}}
                <br>
            </ul>
        </div>
    </div>
</div>
